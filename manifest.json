{
  "manifest_version": 3,
  "name": "Addendum",
  "description": "Replacing ads with art.",
  "author" : "Corey Tegeler,@owise1",
  "version": "0.4",
  "homepage_url" : "http://addendum.kadist.org/",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png"
  },
  
  "browser_action": {
    "default_icon": "images/icon-64.png",
    "default_popup": "interface.html",
    "default_title": "Addendum!"
  },

  "permissions": [
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "notifications",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources" : ["images/*"],
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/lib/jquery-1.11.2.min.js", "js/lib/q.js", "js/lib/ramda.min.js", "js/artAdder.js", "js/document_end.js"],
        "run_at": "document_end",
        "all_frames": true 
    },
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/lib/jquery-1.11.2.min.js", "js/lib/q.js", "js/lib/ramda.min.js", "js/artAdder.js", "js/document_start.js"],
        "run_at": "document_start",
        "all_frames": false 
    }
  ],
  "background": {
    "page": "background.html"
  }
}
