{
  "manifest_version": 2,

  "name": "Add-Art",
  "description": "Replacing ads with art.",
  "author" : "Corey Tegeler",
  "version": "0.1",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png"
  },
  
  "browser_action": {
    "default_icon": "images/icon-64.png",
    "default_popup": "interface.html",
    "default_title": "Add art!"
  },

  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources" : ["images/*"],
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["uBlock/js/vapi-client.js", "uBlock/js/contentscript-start.js"],
        "run_at": "document_start",
        "all_frames": true
    },
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/lib/q.js", "js/helpers.js", "js/artAdder.js", "uBlock/js/contentscript-end.js"],
        "run_at": "document_end",
        "all_frames": true
    },
    {
        "matches": [
            "https://*.adblockplus.org/*",
            "https://*.adblockplus.me/*",
            "https://www.fanboy.co.nz/*"
        ],
        "js": ["uBlock/js/subscriber.js"],
        "run_at": "document_idle"
    }
  ],
  "background": {
    "page": "uBlock/background.html"
  }
}
